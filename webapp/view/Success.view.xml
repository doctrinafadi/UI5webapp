<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  controllerName="app.controller.Success">
  <!-- VerknÃ¼pfung der View mit dem Success-Controller -->
  <Page title="{i18n>appTitle}" class="success-page">
    <content>
      <VBox
        justifyContent="Center"
        alignItems="Center"
        width="100%"
        height="100%">
        <core:Icon
          src="sap-icon://accept"
          size="5rem"
          class="sapUiSmallMarginBottom"/>
        <!-- Anzeige eines Erfolgs-Icons -->
        <Title
          text="{i18n>successtext1}"
          level="H1"
          class="sapUiSmallMargin"
          titleStyle="H1"
          />
        <!-- Erfolgsnachricht als Titel, Text aus i18n-Texten -->
        <Button text="{i18n>btnausloggen}" press="onCloseApp" class="sapUiSmallMargin"/>
        <!-- Button zum Ausloggen, mit Event-Handler -->
      </VBox>
    </content>
  </Page>
</mvc:View>